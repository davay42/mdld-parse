# STROKE 2: Internal Analysis (Bottom Right)
ex:activity_internal_analysis a prov:Activity ;
    rdfs:label "Internal Analysis of 2D Vortex" ;
    prov:used ex:document_2d_vortex ;
    prov:startedAtTime "2026-02-24T22:12:00Z"^^xsd:dateTime ;
    prov:endedAtTime "2026-02-24T22:18:00Z"^^xsd:dateTime ;
    prov:qualifiedAssociation ex:association_internal_analysis ;
